<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.gypc.petsday.helper.XCRoundImageView
        android:id="@+id/headRIV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/pet_default"
        android:layout_margin="12dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击图片上传头像"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/nicknameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="nickname"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp" />

    <EditText
        android:id="@+id/typeET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="type"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp" />

    <RadioGroup
        android:id="@+id/sexRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/boyRB"
        >

        <RadioButton
            android:id="@+id/boyRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="boy"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/girlRB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="girl"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"/>
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="24dp" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择宠物体重："
            android:textSize="20dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/weightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入千克数"
            android:inputType="number"/>
    </LinearLayout>

    <EditText
        android:id="@+id/dateET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:focusable="false"
        android:hint="点击选择宠物生日"
        android:inputType="date"
        android:textAlignment="center" />

    <Button
        android:id="@+id/newPetSubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"/>

</LinearLayout>